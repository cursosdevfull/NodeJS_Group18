{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "rootDir": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
